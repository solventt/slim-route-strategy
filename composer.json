{
    "name": "solventt/slim-route-strategy",
    "description": "The route invocation strategy for the Slim microframework",
    "type": "library",
    "keywords": ["framework","micro","slim","router","strategy"],
    "license": "BSD-3-Clause",
    "authors": [{"name": "Chibizov Gr."}],

    "require": {
        "php": "^8.0",
        "psr/container": "^1.1",
        "slim/slim": "^4.12.0"
    },

    "require-dev": {
        "ext-json": "*",
        "php-di/php-di": "^7.0",
        "phpunit/phpunit": "^9.5",
        "slim/psr7": "^1.6",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^5.7"
    },

    "autoload": {
        "psr-4": {
            "SlimRouteStrategy\\": "src"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "SlimRouteStrategy\\Tests\\": "tests"
        }
    },

    "config": {
        "sort-packages": true
    }
}
