{
  "name": "solventt/slim-route-strategy",
  "description": "The route invocation strategy for the Slim microframework",
  "type": "library",
  "keywords": ["framework","micro","slim","router","strategy"],
  "license": "BSD-3-Clause",
  "authors": [{"name": "Chibizov Gr."}],

  "require": {
    "php": "^7.4",
    "psr/container": "^1.0",
    "slim/slim": "^3.0 || ^4.0"
  },

  "require-dev": {
    "ext-json": "*",
    "php-di/php-di": "^6.3",
    "phpunit/phpunit": "^9.5",
    "slim/psr7": "^1.0",
    "squizlabs/php_codesniffer": "^3.6",
    "vimeo/psalm": "^5.0"
  },

  "autoload": {
    "psr-4": {
      "SlimRouteStrategy\\": "src"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "SlimRouteStrategy\\Tests\\": "tests"
    }
  },

  "config": {
    "sort-packages": true
  }
}